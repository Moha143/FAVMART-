<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fruits_detail_Activity">
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="@drawable/fruit_detail"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/fruit_image_in_details"
            android:layout_marginTop="10dp"
            android:layout_width="219dp"
            android:layout_height="149dp"
            android:src="@drawable/apple"
            />
        <RelativeLayout
            android:layout_toRightOf="@+id/fruit_image_in_details"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roundshape"
                android:gravity="center"
                android:layout_width="77dp"
                android:layout_height="70dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:lottie_rawRes="@raw/love"
                    android:id="@+id/imgfav"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:id="@+id/textviewFFruitName"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="200dp"
                    android:textSize="20sp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/gilorysemibold"
                    android:text="Fruit Name"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <View
                android:id="@+id/divder"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/alto"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gilorymed"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginLeft="12dp"
                    android:id="@+id/textviewUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gilorymed"
                    android:text="Package"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <TextView
                    android:paddingLeft="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gilorymed"
                    android:text="$"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textviewFFruitPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gilorymed"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <Button
                    android:onClick="OnbtnDecrement"
                    android:id="@+id/btnFDecrement"
                    android:layout_marginLeft="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textStyle="bold"
                    android:background="@drawable/increment_rec"
                    android:layout_gravity="center"
                    android:text="-"
                    android:textColor="@color/textgreen"
                    android:textSize="40dp"
                    tools:ignore="OnClick" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/textviewFQuantity"
                    android:layout_marginTop="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="1"
                    android:background="@drawable/increment_rec"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/gilorysemibold"
                    android:textSize="30sp"
                    />
                <Button
                    android:onClick="OnbtnIncrement"
                    android:id="@+id/btnFIncrement"
                    android:layout_marginLeft="2dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textStyle="bold"
                    android:background="@drawable/increment_rec"
                    android:layout_gravity="center"
                    android:text="+"
                    android:textColor="@color/textgreen"
                    android:textSize="40dp"
                    />
                <TextView
                    android:layout_marginLeft="40dp"
                    android:textStyle="bold"
                    android:paddingLeft="50dp"
                    android:textColor="@color/black"
                    android:layout_width="70dp"
                    android:textSize="30sp"
                    android:fontFamily="@font/gilorymed"
                    android:text="$"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textviewFAmount"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="70dp"
                    android:textSize="30sp"
                    android:fontFamily="@font/gilorymed"
                    android:text="2"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/alto"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"

                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="200dp"
                android:textSize="20sp"
                android:fontFamily="@font/gilorysemibold"
                android:text="Product Description"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/RAProduct_Des_relative"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/textviewFruitDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/gilorymed"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="brief description of the product.."
                    android:textColor="@color/downriver"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="20dp"
                android:id="@+id/nnn"
                android:layout_below="@id/RAProduct_Des_relative"
                android:layout_marginRight="20dp"
                android:gravity="center">
                <Button
                    android:fontFamily="@font/gilorysemibold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnmycart"
                    android:background="@android:color/transparent"
                    android:text="Add to my cart"
                    android:textSize="27sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/whitess"
                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>