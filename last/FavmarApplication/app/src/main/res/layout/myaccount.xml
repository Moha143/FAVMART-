<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/RUserIMG"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/userprofile_img"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:src="@drawable/account"
            android:foregroundGravity="center"
            />
        <RelativeLayout
            android:layout_toRightOf="@+id/userprofile_img"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="12dp"
                android:id="@+id/userprofile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilorymed"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="25sp"
                />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_below="@+id/userprofile_name"
                android:id="@+id/userprofile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilorymed"
                android:text="email"
                android:textColor="@color/black"
                android:textSize="19sp" />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_below="@+id/userprofile_name"
                android:id="@+id/userprofile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilorymed"
                android:visibility="invisible"
                android:text="email"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/alto"
            android:layout_gravity="center"
            android:layout_below="@+id/userprofile_img"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_white"
        android:layout_marginLeft="20dp"
        android:id="@+id/RLEdit"
        android:layout_marginTop="0dp"
        android:layout_below="@id/RMYA_orders"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/la"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@drawable/logouticon" />
        <Button
            android:layout_toRightOf="@id/la"
            android:fontFamily="@font/gilorysemibold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnmyAEdit"
            android:background="@android:color/transparent"
            android:text="Edit profile"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:textSize="27sp"
            android:textColor="@color/textgreen"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/alto"
        android:layout_gravity="center"
        android:layout_below="@+id/btnmyAEdit"
        />
    <RelativeLayout
        android:id="@+id/RMYA_orders"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/user_order_img"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/orderss"
            android:foregroundGravity="center"
            />
        <TextView

            android:layout_toRightOf="@+id/user_order_img"
            android:layout_marginLeft="2dp"
            android:id="@+id/orders"
            android:textStyle="bold"
          android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:fontFamily="@font/gilorymed"
            android:text="Orders"
            android:textColor="@color/black"
            android:textSize="21sp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nav_next"
            android:paddingLeft="100dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/orders"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/RMYA_orders"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/alto"
            android:layout_gravity="center"

            tools:ignore="NotSibling" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RMYA_feedback"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/img_feedback"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/feedb"
            android:foregroundGravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/img_feedback"
            android:layout_marginLeft="2dp"
            android:id="@+id/tvfeedback"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:fontFamily="@font/gilorymed"
            android:text="Feedback"
            android:textColor="@color/black"
            android:textSize="21sp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nav_next"
            android:paddingLeft="77dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tvfeedback"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/RMYA_feedback"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/alto"
            android:layout_gravity="center"

            tools:ignore="NotSibling" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RMYA_ord"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/user_or_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/about"
            android:foregroundGravity="center"
            />
        <TextView
            android:layout_toRightOf="@+id/user_or_img"
            android:layout_marginLeft="2dp"
            android:id="@+id/or"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:fontFamily="@font/gilorymed"
            android:text="About"
            android:textColor="@color/black"
            android:textSize="21sp"
            />
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nav_next"
            android:paddingLeft="100dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/or"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/RMYA_orders"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/alto"
            android:layout_gravity="center"

            tools:ignore="NotSibling" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_white"
        android:layout_marginLeft="20dp"
        android:id="@+id/RALout"
        android:layout_marginTop="20dp"
        android:layout_below="@id/RMYA_orders"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/loh"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@drawable/logouticon" />
        <Button
            android:layout_toRightOf="@id/loh"
            android:fontFamily="@font/gilorysemibold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnmyaccLogout"
            android:background="@android:color/transparent"
            android:text="LOGOUT"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:textSize="27sp"
            android:textColor="@color/textgreen"
            />
    </RelativeLayout>
</LinearLayout>